<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="40dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="High Goals Made"
                android:id="@+id/hi_made_label"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="28dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hi_made_spinner"
                android:layout_below="@+id/hi_made_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hi_failed_spinner"
                android:layout_below="@+id/hi_fail_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="High Goals Failed"
                android:id="@+id/hi_fail_label"
                android:layout_below="@+id/hi_made_spinner"
                android:layout_centerHorizontal="true"
                android:textSize="28dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lo_made_spinner"
                android:layout_below="@+id/lo_made_label"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Low Goals Made"
                android:id="@+id/lo_made_label"
                android:layout_below="@+id/hi_failed_spinner"
                android:layout_centerHorizontal="true"
                android:textSize="28dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>